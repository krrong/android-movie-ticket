<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movieReservation.MovieReservationActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/reservation_movie_poster"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/movie_poster"
                tools:src="@drawable/poster_sorcerers_stone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="21dp"
                android:layout_marginVertical="27dp"
                android:orientation="vertical">

            <TextView
                android:id="@+id/reservation_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="해리 포터와 마법사의 돌"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reservation_movie_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:textColor="@color/black"
                tools:text="상영일 : 2023.03.01 ~ 2023.04.30"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reservation_movie_running_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="러닝타임 152분" />

            <TextView
                android:id="@+id/reservation_movie_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="줄거리" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_navigate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="30dp"
        android:background="@color/white">

        <Spinner
            android:id="@+id/reservation_screening_date_spinner"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reservation_screening_time_spinner"/>

        <Spinner
            android:id="@+id/reservation_screening_time_spinner"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@id/reservation_screening_date_spinner"
            app:layout_constraintStart_toEndOf="@id/reservation_screening_date_spinner"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/reservation_decrease_ticket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minus"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reservation_screening_date_spinner"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/reservation_ticket_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/reservation_decrease_ticket_button"
            app:layout_constraintStart_toEndOf="@id/reservation_decrease_ticket_button"
            app:layout_constraintEnd_toStartOf="@id/reservation_increase_ticket_button"
            app:layout_constraintBottom_toBottomOf="@id/reservation_decrease_ticket_button"
            android:textAlignment="center"
            tools:text="1" />

        <Button
            android:id="@+id/reservation_increase_ticket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/reservation_decrease_ticket_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/reservation_complete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reservation_complete"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/reservation_decrease_ticket_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>